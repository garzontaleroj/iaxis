                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr> 
    </table>
    <!--Area campos -->
    <c:import url="./include/botonera_nt.jsp"><c:param name="__botones">aceptar</c:param></c:import>
